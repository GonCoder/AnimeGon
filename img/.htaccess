# Permitir acceso solo a im치genes
<Files ~ "\.(jpe?g|png|gif|ico)$">
    Require all granted
</Files>

# Denegar acceso a archivos PHP
<Files ~ "\.php$">
    Require all denied
</Files>

# Denegar acceso a archivos de script
<Files ~ "\.(sh|bat|exe|com)$">
    Require all denied
</Files>

# Configurar tipos MIME para im치genes
AddType image/jpeg .jpg .jpeg
AddType image/png .png
AddType image/gif .gif
AddType image/x-icon .ico

# Prevenir ejecuci칩n de PHP
<IfModule mod_php7.c>
    php_flag engine off
</IfModule>

<IfModule mod_php8.c>
    php_flag engine off
</IfModule>

# Headers para cache de im치genes
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
</IfModule>